
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/pages.css">
    <!-- 图片预览插件 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.10.5/viewer.css">
  </head>
  <body>

    <div class="container">
      <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
          <img src="/images/logo.png" alt="" class="bi me-2"  height="32">
          Online Store
        </a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <% pages.forEach(page=>{ %>
            <% if(page.slug==='home'){ %>
              <li >
                <a class="a-list nav-link px-2 link-dark" href="/"><%= page.title %></a>
              </li>
            <% }else{ %>
            <li class="header-li">
              <a class="a-list nav-link px-2 link-dark" href="/<%= page.slug %>"><%= page.title %></a>
            </li>
            <% } %> 
          <% }) %>   
        </ul>
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <!-- cart购物车 -->
          <li class="nav-item">
            

            <a href="/cart/checkout" class="btn btn-outline-primary me-3 link-dark position-relative">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
              </svg>
             
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <% if(cart !== undefined){ %>
                  <%= cart.length %>
                <% }else{ %>
                  0
                  <% } %>
              </span>
            </a>
          </li>
          <% if(user){ %>
            <li><a class="nav-link px-2 link-secondary" href="/users/logout">Hi, <%= user.name %>&nbsp;
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z"/>
                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
              </svg>
            </a></li>    
          <% }else{ %> 
            <li><a class="btn btn-outline-primary me-2" href="/users/register">Register</a></li>   
            <li><a class="btn btn-outline-primary me-2" href="/users/login">Log in</a></li>   
          <% } %> 
         <% if(user && user.admin===1){ %> 
          <li><a class="nav-link px-2 link-secondary btn btn-outline-primary me-2" href="/admin/pages">Admin area</a></li>   
          <% } %>  
        </ul>

        
      </header>
    </div>
 
<div class="container messages">
  <%- messages('messages', locals) %>
</div> 


  <div class="container">
    
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link disabled" aria-current="page" href="#">Catogrories</a>
      </li>
      <li class="nav-item">
        <a class="nav-link link-dark a-list" href="/all-products">All products</a></a>
      </li>
      <% categories.forEach(cat=>{ %> 
        <li class="nav-item"><a class="nav-link link-dark a-list"  href="/all-products/<%= cat.slug %>"><%= cat.title %></a> </li>
      <% }) %>
    </ul>
    <br><br>



  